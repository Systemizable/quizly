{
  "version": 2,
  "builds": [
    { "src": "src/api/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/register", "dest": "/src/api/register.js" },
    { "src": "/api/login", "dest": "/src/api/login.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
